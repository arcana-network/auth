{
  "compilerOptions": {                       
    "lib": ["dom", "es2018"],
    "target": "es6",
    "module": "commonjs",     
    "moduleResolution": "node",                     
    "declaration": true,                         
    "declarationDir": "types",
    "outDir": "dist", 
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/*.ts",
  ],
}
